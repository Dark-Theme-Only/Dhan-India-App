<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    <Spinner
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:id="@+id/month_spinner"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/peoplecontri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/month_spinner"
        android:layout_margin="10dp"
        android:text=" No of people Who have Contributed"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/no_of_people_contributed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
              
        android:text="10"
        android:layout_alignParentRight="true"
        android:layout_below="@id/month_spinner"
        android:layout_margin="10dp"
        android:text="100"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/peoplecontri1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/peoplecontri"
        android:layout_margin="10dp"
        android:text=" Total Amount Collected"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/no_of_people_contributed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000"
        android:layout_alignParentRight="true"
        android:layout_below="@id/no_of_people_contributed"
        android:layout_margin="10dp"

        android:text="100"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/peoplecontri2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/peoplecontri2"
        android:text="People taking loan "
        android:layout_below="@id/peoplecontri1"
        android:layout_margin="10dp"
        android:text="People Left to Contribute"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/no_of_people_contributed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_alignParentRight="true"
        android:layout_below="@id/no_of_people_contributed1"
        android:layout_margin="10dp"
        android:text="100"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>